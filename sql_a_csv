import pandas as pd
import sqlite3
import csv

# Cambiar database por el nombre de la base de datos
conn = sqlite3.connect('database.db')

# Cambiar column1 y column2 por los nombres de las columnas de la base, y table_name por el nombre de la tabla
query = "SELECT column1, column2 FROM table_name"

df = pd.read_sql_query(query, conn)

# cambiar column1 y column2 por el nombre de la columna a la que se quiere agregar comillas.
df['column1'] = df['column1'].apply(lambda x: f'{x}')
df['column2'] = df['column2'].apply(lambda x: f'{x}')


df.to_csv('resultado.csv', index=False, quotechar='"', encoding='utf-8', quoting=csv.QUOTE_NONNUMERIC)
